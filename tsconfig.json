{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
